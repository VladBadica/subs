<div class="textareabackground">
  <div class="shadedbox">
  <h2>Edit Account</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input_box">
       <%= f.text_field :firstname, placeholder:"First name", autofocus: true %>
    </div>

    <div class="input_box">
       <%= f.text_field :lastname, placeholder:"Last name", autofocus: true %>
    </div>

    <div class="input_box">
      <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <div class="input_box">
      <%= f.password_field :password, placeholder:"Password (leave blank if you don't want to change it)", autocomplete: "new-password" %>
    </div>

    <div class="input_box">
      <%= f.password_field :password_confirmation, placeholder:"Password confirmation", autocomplete: "new-password" %>
    </div>
    <br>
    <div class="input_box">
      <%= f.password_field :current_password, placeholder:"Current password to confirm changes", autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'submit_box'  %>
    </div>
  <% end %>
  <br/>
  <br/>
  <h3>Delete Account</h3>

  <p><%= button_to "Delete my account", registration_path(resource_name), class: 'submit_box', data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
  </div>
</div>
