<h1>Listings</h1>
<% unless @products.nil? %>
  <% if @products.empty? %>
    <h2>No products found</h2>
  <% else %>
    <% unless @query.nil? %>
      <h2>Search results for "<%=@query%>"</h2>
    <% end %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Image</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to product.name, product %>
          </td>
          <td>
            <%= product.price %>
          </td>
          <td>
            <% if product.image.attached? %>
              <%= image_tag product.image %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
<br/>
<%= link_to 'New Product', new_product_path %>
