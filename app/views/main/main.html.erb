<h1>Listings</h1>
<% unless @products.nil? %>
  <% if @products.empty? %>
    <h2>No products found</h2>
  <% else %>
    <% unless @query.nil? %>
      <h2>Results for SEARCH_WORD (needs changing)</h2>
    <% end %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td>
            <%= product.name %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
<br/>
<%= link_to 'New Product', new_product_path %>
