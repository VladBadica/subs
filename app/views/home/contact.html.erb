<div class="textareabackground">
  <div class="shadedbox">
<%# Moves page content down when displaying nav bar %>
<% if user_signed_in? %>
  <br>
<% end %>
<h2>
  <%= t('.title') %>
</h2>
<p>
  <%= t('.contact_us') %>
</p>

<br>

<%= form_tag request_contact_path, method: 'post' do %>
  <% if user_signed_in? %>
    <%= label_tag :name, t('.name') %>
    <%= text_field_tag :name, current_user.firstname, title: t('.enter_name'), size: 50, class: 'input_box' %>
    <%= label_tag :email, t('.email') %>
    <%= email_field_tag :email, current_user.email, title: t('.enter_email'), class: 'input_box' %>
  <% else %>
    <%= label_tag :name, t('.name') %>
    <%= text_field_tag :name, '', title: t('.enter_name'), size: 50, class: 'input_box' %>
    <%= label_tag :email, t('.email') %>
    <%= email_field_tag :email, '', title: t('.enter_email'), class: 'input_box' %>
  <% end %>

  <%= label_tag :telephone, t('.telephone') %>
  <%= telephone_field_tag :telephone, '', title: t('.enter_telephone'), class: 'input_box' %>
  <%= label_tag :message, t('.message') %>
  <%= text_field_tag :message, '', title: t('.enter_message'), size: 100, class: 'input_box' %>

  <br>

  <%= submit_tag t('.submit') %>

<% end %>

<br>
</div>
</div>
