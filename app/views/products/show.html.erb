<h2>My Listings</h2>
<div class="usersellingtable">
  <% @userListings.each do |userListing| %>
    <div class="sellingrow">
      <%= image_tag(userListing.image, class: "productImage") %>
      <div class="about">
        <p><%= userListing.name %></p>
        <p><%= userListing.description %></p>
        <p><%= number_to_currency(userListing.price, :unit => "Â£") %></p>
      </div>
      <div class="options">
        <%= link_to image_tag("/assets/editicon.png", :alt => "edit icon", :class => "icon"), edit_product_path(userListing.id)%>
        <%= link_to image_tag("/assets/deleteicon.png", :alt => "delete icon", :class => "icon"), product_path(userListing.id), data: {method: :delete, confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
</div>
